<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textColor="@color/colorfacebookBlue"
                android:layout_marginLeft="3dp"
                android:id="@+id/diary_date"
                android:textSize="55dp"
                android:text="18"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView

                android:id="@+id/diary_weekday"
                android:textColor="@color/colorfacebookBlue"
                android:layout_marginTop="63dp"
                android:layout_marginLeft="26dp"
                android:textSize="15sp"
                android:text="Fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="13sp"
                android:layout_marginTop="12dp"
                android:id="@+id/time"
                android:text="12:00"
                android:layout_toRightOf="@+id/diary_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/diary_title"
                android:textColor="@color/colorfacebookBlue"
                android:textSize="16sp"
                android:layout_below="@id/time"
                android:layout_toRightOf="@id/diary_date"
                android:text="Diary Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:maxLines="2"
                android:id="@+id/diary_content"
                android:textColor="@color/colorfront"
                android:textSize="12sp"
                android:layout_below="@id/diary_title"
                android:layout_toRightOf="@id/diary_date"
                android:text="My Diary content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>